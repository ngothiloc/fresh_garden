<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/dashboard_head', { title: 'Dashboard - AddProducts'
    }) %>
  </head>

  <body>
    <!-- main wrapper -->

    <!-- navbar -->
    <%- include('./partials/dashboard_navbar') %>

    <div class="main-wrapper">
      <!-- navbar vertical -->
      <!-- navbar -->
      <%- include('./partials/dashboard_navbar_vertical', { activePage:
      'products' }) %>

      <!-- main -->
      <main class="main-content-wrapper">
        <!-- container -->
        <div class="container">
          <!-- row -->
          <div class="row mb-8">
            <div class="col-md-12">
              <div class="d-md-flex justify-content-between align-items-center">
                <!-- page header -->
                <div>
                  <h2>Thêm sản phẩmm mới</h2>
                  <!-- breacrumb -->
                  <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                      <li class="breadcrumb-item">
                        <a href="/dashboard" class="text-inherit"
                          >Trang quản lý /</a
                        >
                      </li>
                      <li class="">
                        <a href="/dashboard/products" class="text-inherit"
                          >Sản phẩm /</a
                        >
                      </li>
                      <li class="breadcrumb-item active" aria-current="page">
                        Thêm sản phẩm mới
                      </li>
                    </ol>
                  </nav>
                </div>
                <!-- button -->
                <div>
                  <a href="/dashboard/products" class="btn btn-light">Trở về</a>
                </div>
              </div>
            </div>
          </div>
          <!-- row -->
          <form
            action="/dashboard/products/add"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="row">
              <div class="col-lg-8 col-12">
                <!-- card -->
                <div class="card mb-6 card-lg">
                  <!-- card body -->
                  <div class="card-body p-6">
                    <h4 class="mb-4 h5">Thông tin sản phẩm</h4>
                    <div class="row">
                      <!-- Tiêu đề -->
                      <div class="mb-3 col-lg-6">
                        <label for="productName" class="form-label"
                          >Tiêu đề</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="productName"
                          name="name"
                          placeholder="Tên sản phẩm"
                          required
                        />
                      </div>
                      <!-- Danh mục -->
                      <div class="mb-3 col-lg-6">
                        <label for="categoryInput" class="form-label"
                          >Danh mục sản phẩm</label
                        >
                        <select
                          class="form-select"
                          id="categoryInput"
                          name="category"
                          required
                        >
                          <option value="">Chọn danh mục sản phẩm</option>
                          <% if (categories && categories.length > 0) { %> <%
                          categories.forEach(category => { %>
                          <option value="<%= category.name %>">
                            <%= category.name %>
                            <!-- Hiển thị tên danh mục -->
                          </option>
                          <% }); %> <% } else { %>
                          <option value="">No categories available</option>
                          <% } %>
                        </select>
                      </div>
                      <!-- Ảnh sản phẩm -->
                      <div class="mb-3 col-lg-12 mt-5">
                        <h4 class="mb-3 h5">Ảnh sản phẩm</h4>

                        <!-- Nút chọn ảnh -->
                        <input
                          type="file"
                          class="form-control"
                          id="productImage"
                          name="image"
                          required
                        />

                        <!-- Phần hiển thị ảnh sau khi tải lên -->
                        <div id="imagePreviewContainer">
                          <img
                            id="imagePreview"
                            class="image-preview"
                            src=""
                            alt="Ảnh sản phẩm sẽ hiển thị tại đây"
                            style="
                              display: none;
                              margin-top: 20px;
                              max-width: 100%;
                              max-height: 400px;
                              border-radius: 20px;
                            "
                          />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!-- Giá sản phẩm -->
              <div class="col-lg-4 col-12">
                <!-- card -->
                <div class="card mb-6 card-lg">
                  <!-- card body -->
                  <div class="card-body p-6">
                    <h4 class="mb-4 h5">Giá sản phẩm</h4>
                    <div class="mb-3">
                      <!-- <label for="productPrice" class="form-label">Giá</label> -->
                      <input
                        type="number"
                        step="0.01"
                        class="form-control"
                        id="productPrice"
                        name="price"
                        placeholder="00.00 VND"
                        required
                      />
                    </div>
                    <h4 class="mb-4 h5 mt-5">Số lượng</h4>
                    <input
                      type="number"
                      step="0.01"
                      class="form-control"
                      id="productQuantity"
                      name="quantity"
                      placeholder="00.00"
                      required
                    />
                  </div>
                </div>
                <div class="d-grid">
                  <button type="submit" class="btn btn-primary">
                    Thêm sản phẩm
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </main>
    </div>

    <!-- Libs JS -->
    <!-- <script src="../assets/libs/jquery/dist/jquery.min.js"></script> -->
    <script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../assets/libs/simplebar/dist/simplebar.min.js"></script>

    <!-- Theme JS -->
    <script src="../assets/js/theme.min.js"></script>

    <script src="../assets/libs/quill/dist/quill.min.js"></script>
    <script src="../assets/js/vendors/editor.js"></script>
    <script src="../assets/libs/dropzone/dist/min/dropzone.min.js"></script>
    <script src="../assets/js/vendors/dropzone.js"></script>
    <script>
      // Lắng nghe sự kiện khi người dùng chọn file
      document
        .getElementById("productImage")
        .addEventListener("change", function (event) {
          const file = event.target.files[0];

          // Kiểm tra xem có file được chọn không
          if (file) {
            const reader = new FileReader();

            // Khi đọc xong file, hiển thị ảnh
            reader.onload = function (e) {
              const imagePreview = document.getElementById("imagePreview");
              imagePreview.src = e.target.result; // Cập nhật src của ảnh
              imagePreview.style.display = "block"; // Hiển thị ảnh
            };

            reader.readAsDataURL(file); // Đọc file dưới dạng base64
          }
        });
    </script>
  </body>

